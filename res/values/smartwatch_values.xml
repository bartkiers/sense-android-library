<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Name of app, shown when installing/uninstalling extension -->
    <string name="smartwatch_app_name">Sample sensor extension</string>
    <!-- Title of preference activity -->
    <string name="smartwatch_preference_activity_title">Sample sensor settings</string>
    <!-- Name of extension, shown in preferences -->
    <string name="smartwatch_extension_name">Sample sensor</string>
    <!-- Configuration title shown in preferences -->
    <string name="smartwatch_configuration_text">Sample sensor settings</string>
    <!-- Menu option shown in preferences -->
    <string name="smartwatch_preference_option_read_me">READ ME</string>
    <!-- Read me text shown in dialog -->
    <string name="smartwatch_preference_option_read_me_txt">The sample sensor extension shows the reading from the device accelerometer on the device.</string>

    <!-- Sensor is unreliable. -->
    <string name="smartwatch_accuracy_unreliable">Unrel.</string>

    <!-- Sensor accuracy is low -->
    <string name="smartwatch_accuracy_low">Low</string>

    <!-- Sensor accuracy is medium -->
    <string name="smartwatch_accuracy_medium">Medium</string>

    <!-- Sensor accuracy is high -->
    <string name="smartwatch_accuracy_high">High</string>

    <!-- Label for the accuracy. -->
    <string name="smartwatch_label_accuracy">Accuracy:&#160;</string>

    <!-- Label for the x acceleration. -->
    <string name="smartwatch_label_x">x:&#160;</string>

    <!-- Label for the y acceleration. -->
    <string name="smartwatch_label_y">y:&#160;</string>

    <!-- Label for the z acceleration. -->
    <string name="smartwatch_label_z">z:&#160;</string>

    <!-- Label for the time stamp. -->
    <string name="smartwatch_label_time">ms:&#160;</string>
    
    <style name="SmartWatchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/smart_watch_text_size_small</item>
        <item name="android:textColor">@color/smart_watch_text_color_white</item>
    </style>
</resources>